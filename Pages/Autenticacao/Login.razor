@inherits LoginPage
@layout AutenticaLayout﻿
@page "/login"
<EditForm Model="@InputRequest" OnSubmit="OnValidSubmitAsync">
    <DataAnnotationsValidator />

    <MudTextField Label="Usuário" HelperText="Campo obrigatório - informe o nome do usuário" RequiredError="Favor informar o nome do usuário"
                  @bind-Value="InputRequest.Email" For="@(() => InputRequest.Email)" Variant="@MudBlazor.Variant.Outlined" Required="true"></MudTextField>

    <MudTextField Label="Senha" HelperText="Campo obrigatório - informe a senha" RequiredError="Favor informar a senha"
                  @bind-Value="InputRequest.Password" For="@(() => InputRequest.Password)" InputType="InputType.Password" Variant="@MudBlazor.Variant.Outlined" Required="true"></MudTextField>

    <MudButton ButtonType="MudBlazor.ButtonType.Submit" Variant="MudBlazor.Variant.Filled" class="btn my-5 fw-bold btn-lg sign-up rounded-5 px-5 fs-6">Salvar</MudButton>
</EditForm>